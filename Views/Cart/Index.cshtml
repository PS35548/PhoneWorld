@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <!-- Bảng Giỏ Hàng -->
    <div class="col-md-8 col-sm-12 pt-4 px-3 py-3">
        <h4 class="bi bi-apple">Giỏ hàng</h4>
        <hr class="mt-3">
        <div class="table-responsive">
            <table class="table table-responsive table-bordered align-middle text-center col-md-12">
                <thead>
                    <tr class="bg-dark bg-opacity-50">
                        <th class="text-center align-middle col-md-2" scope="col" style="color:white">Ảnh sản phẩm</th>
                        <th class="text-center align-middle col-md-3" scope="col" style="color:white">Tên sản phẩm</th>
                        <th class="text-center align-middle col-md-2" scope="col" style="color:white">Giá tiền</th>
                        <th class="text-center align-middle col-md-2" scope="col" style="color:white">Số lượng</th>
                        <th class="text-center align-middle col-md-2" scope="col" style="color:white">Thành tiền</th>
                        <th class="col-md-1"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="text-center">
                        <th scope="row">
                            <img src="~/image/ava-ip15-green.png" alt="dt" width="150">
                        </th>
                        <td>iPhone 15</td>
                        <td> $150</td>
                        <td>
                            <input type="number" style="width: 80px;">
                        </td>
                        <td>$150</td>
                        <td><button class="btn btn-danger">Xoá</button></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="col-md-4 col-sm-12 mt-4 p-3" ng-show="email!=null">
        <div class="container">
            <h3>Thanh Toán & Giao Hàng</h3>
            <hr class="mt-4">
            <p><strong>Thông tin giao hàng</strong></p>

            <form name="myForm">
                <!-- Họ và Tên -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="mb-3">
                            <input type="text" required class="form-control" placeholder="Họ và tên người nhận">
                        </div>
                    </div>
                </div>


                <div class="row">
                    <!-- Số Điện Thoại -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <input type="text" class="form-control" required placeholder="Số điện thoại">
                        </div>
                    </div>
                    <!-- Email -->
                    <div class="col-md-6">
                        <div class="mb-3">
                            <input type="email" required class="form-control" placeholder="Email của bạn">
                        </div>
                    </div>
                </div>

                <!-- Địa chỉ -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="mb-3">
                            <input type="text" required class="form-control" placeholder="Địa chỉ nhận hàng">
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-12">
                        <div class="mb-3">
                            <textarea class="form-control" rows="5" placeholder="Ghi chú"></textarea>
                        </div>
                    </div>
                </div>
            </form>

            <ul style="margin: 0; padding: 0 ;list-style: none; display: flex; justify-content: space-between; align-items: baseline;">
                <li>
                    <h4><strong>Tổng tiền:</strong></h4>
                </li>
                <li>
                    <p><strong>$150</strong></p>
                </li>
            </ul>
            <a> <button type="button" class="btn btn-dark" style="width: 100%;">Mua Hàng</button> </a>
        </div>
    </div>

</div>
