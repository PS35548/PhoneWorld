@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row text-center" style="margin-top: 20px;">
    <div class="modal-body text-bg-dark">
        <div class="container">
            <div class="row">
                <div class="col-md-6 bg-dark"
                    style="border-right: 1px solid white; border-left: 1px solid black; border-bottom: 1px solid black; border-top: 1px solid black;">
                    <img src="~/image/ava-ip15-green.png" alt="dt" width="410">
                </div>
                <div class="col-md-6 bg-dark "
                    style="border-right: 1px solid white; border-left: 1px solid white; border-bottom: 1px solid white; border-top: 1px solid white;;">
                    <h3 class="title text-center"
                        style="color: aliceblue;font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; color: rgb(22, 176, 11);">
                        iPhone 15 Pro</h3>
                    <h6 class="title text-center"
                        style="color: aliceblue;font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; color: rgb(22, 176, 11);">
                        © Apple Inc. 2024</h6>
                    <h6 class="title text-center"
                        style="color: aliceblue;font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; color: white;">
                        Thông tin:</h6>
                    <div class="row">
                        <div class="col-md-6">
                            <p class="option bi bi-cpu" style="color: aliceblue; font-family: sans-serif;">Apple A17 Pro
                            </p>
                            <p class="option bi bi-phone" style="color: aliceblue; font-family: sans-serif;">
                                6.7 inch</p>
                            <p class="option bi bi-memory" style="color: aliceblue; font-family: sans-serif;">
                                4 GB</p>
                            <p class="option bi bi-hdd" style="color: aliceblue; font-family: sans-serif;">
                                512 GB</p>
                            <p class="option bi bi-battery-full" style="color: aliceblue; font-family: sans-serif;">
                                500 Hz</p>

                        </div>
                        <div class="col-md-6">
                            <p style="color: white;">iPhone 15 Pro Max là một chiếc điện thoại thông minh cao
                                cấp được mong đợi nhất năm 2023. Với nhiều tính năng mới
                                và cải tiến, iPhone 15 Pro Max chắc chắn sẽ là một lựa chọn
                                tuyệt vời cho những người dùng đang tìm kiếm một chiếc điện
                                thoại có hiệu năng mạnh mẽ.</p>

                        </div>
                    </div>
                    <div class="price">
                        <H3
                            style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; color: rgb(22, 176, 11);">
                            Price: $150</H3>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn">
                                <button type="button" class="btn btn-outline-success btn-sm bi bi-apple"
                                    style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;">Mua</button>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="btn">
                                <button type="button" class="btn btn-outline-success btn-sm bi bi-apple"
                                    style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;">Thêm
                                    vào giỏ</button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<hr class="mt-4">